apt-get install erlang
apt-get install gnuplot-nox libtemplate-perl libhtml-template-perl libhtml-template-expr-perl
cd /tmp && wget http://tsung.erlang-projects.org/dist/tsung-1.4.2.tar.gz && tar -xvf tsung-1.4.2.tar.gz
cd ./tsung-1.4.2 && ./configure && make && make install
mkdir -p /root/.tsung && cd /root/.tsung

# examples of configs in /tmp/tsung-1.4.2/examples